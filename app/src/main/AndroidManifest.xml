<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="example.codeclan.com.cardgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/main_screen_name">
            <!--put intent filter in here-->
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".BlackjackActivity"
            android:label="@string/blackjack_screen_name"
            android:parentActivityName=".MainActivity">
            <!--put intent filter in here-->

        </activity>

        <activity
            android:name=".NewPlayerActivity"
            android:label="@string/new_player_screen_name"
            android:parentActivityName=".MainActivity">
            <!--put intent filter in here-->

        </activity>

        <activity
            android:name=".WinnerActivity"
            android:label="@string/winner_screen_name"
            android:parentActivityName=".MainActivity">
            <!--put intent filter in here-->

        </activity>

    </application>

</manifest>
