<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
    <!--android:background="#999"-->

    <TextView
        android:id="@+id/your_cards_text_view_id"
        android:textSize="20sp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/player_funds_text_view_id"
            android:textSize="30sp"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <!--android:background="#999"-->

        <Button
        android:id="@+id/initial_deal_button_id"
        android:text="@string/deal_text"
        android:onClick="onInitialDealButtonPressed"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <!--android:background="#999"-->


        <ImageView
        android:id="@+id/initial_card_1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />

    <ImageView
        android:id="@+id/initial_card_2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />



<!--potential cards-->

    <ImageView
        android:id="@+id/potential_card_3_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />

    <ImageView
        android:id="@+id/potential_card_4_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />


    <ImageView
        android:id="@+id/potential_card_5_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />


    <ImageView
        android:id="@+id/potential_card_6_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
    <!--android:background="#977000"-->


    <!--dealer cards-->

    <ImageView
        android:id="@+id/dealer_card_1_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/back" />

    <ImageView
        android:id="@+id/dealer_card_2_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:adjustViewBounds="true"
        android:maxWidth="50dp"
        android:maxHeight="50dp"
        android:scaleType="fitCenter"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/ace_of_spades" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:orientation="horizontal" >
        <!--android:background="#999"-->




<!--hit and stick buttons-->

    <Button
        android:id="@+id/hit_button_id"
        android:text="@string/hit_text"
        android:onClick="onHitButtonPressed"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/stick_button_id"
        android:text="@string/stick_text"
        android:onClick="onStickButtonPressed"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/who_won_text_view_id"
        android:textSize="30sp"
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
</LinearLayout>