<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felt"
    >


    <EditText
        android:id="@+id/enter_player_name_id"
        android:hint="@string/enter_player_name_text"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/new_player_button_id"
        android:text="@string/new_player_button_text"
        android:onClick="onNewPlayerButtonPressed"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>