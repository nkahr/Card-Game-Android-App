<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/felt"
    >

    <EditText
        android:id="@+id/pay_in_edit_text_id"
        android:hint="@string/amount_to_pay_in_text"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/pay_in_button_id"
        android:text="@string/pay_in_button_text"
        android:onClick="onPayInButtonPressed"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>